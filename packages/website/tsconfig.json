{
  "compilerOptions": {
    "outDir": "lib",
    "strict": true,
    "target": "ES2020",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "ali-react-overlays": ["../ali-react-overlays/src/index.tsx"]
    }
  },
  "include": ["src/**/*"]
}
